# normally this file is automatically generated for Debian scripts,
# but we manage with salt to prevent issues with databases restored 
# from other systems
[client]
host     = localhost
user     = debian-sys-maint
password = {{pillar.percona['debian-sys-maint-passwd']}}
socket   = /var/run/mysqld/mysqld.sock
[mysql_upgrade]
host     = localhost
user     = debian-sys-maint
password = {{pillar.percona['debian-sys-maint-passwd']}}
socket   = /var/run/mysqld/mysqld.sock
basedir  = /usr
